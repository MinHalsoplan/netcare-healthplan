<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<beans profile="prod">
		<context:property-placeholder location="
			file:${user.home}/.netcare-prod/database.properties, 
			file:${user.home}/.netcare-prod/email.properties,
			file:${user.home}/.netcare-prod/push.properties,
			file:${user.home}/.netcare-prod/mvk.properties,
			file:${user.home}/.netcare-prod/application.properties"/>
		
		<context:component-scan base-package="org.callistasoftware.netcare.mvk.authentication.service.impl" />
		<import resource="classpath*:/netcare-mvk-integration-config.xml"/>
	</beans>

	<beans profile="qa">
		<context:property-placeholder location="
 			file://${user.home}/.netcare-qa/database.properties,
 			file://${user.home}/.netcare-qa/email.properties,
 			file://${user.home}/.netcare-qa/push.properties,
 			file://${user.home}/.netcare-qa/mvk.properties,
 			file://${user.home}/.netcare-qa/application.properties"/>
		
		<context:component-scan base-package="org.callistasoftware.netcare.mvk.authentication.service.impl" />
		<import resource="classpath*:/netcare-mvk-integration-config.xml"/>
	</beans>

  	<beans profile="test">
  	</beans>

  	<beans profile="ios-testdata">
  	</beans>

  	<beans profile="db-embedded">
  		<context:property-placeholder location="classpath:/db-embedded.properties,classpath:/application.properties,classpath:/email.properties,classpath:/push.properties,classpath*:/mvk.properties" />
  	</beans>

  	<beans profile="db-psql">
  		<context:property-placeholder location="classpath:/db-psql.properties,classpath:/application.properties,classpath:/email.properties,classpath:/push.properties,classpath*:/mvk.properties" />
  	</beans>
  	
  	<beans>
  		<import resource="netcare-common-config.xml" />
  	</beans>
</beans>