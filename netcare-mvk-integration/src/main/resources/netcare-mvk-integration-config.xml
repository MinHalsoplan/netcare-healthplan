<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
	http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">
	
	<context:annotation-config />
	<context:component-scan base-package="org.callistasoftware.spring.mvk.authentication.service.impl" />
	
	<beans profile="qa">
		<import resource="mvk-createtoken-cxf-config.xml"/>
	</beans>
	
	<beans profile="qa,prod">
		<import resource="mvk-validatetoken-cxf-config.xml"/>
		
		<cxf:bus>
			<cxf:features>
				<cxf:logging/>
			</cxf:features>
		</cxf:bus>
	</beans>

</beans>
