<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
	http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<security:http security="none" pattern="/js/**" />
	<security:http security="none" pattern="/css/**" />

	<security:http security="none" pattern="/netcare/error/**" />

	<!-- 
		The /initial path should be configured to ONLY
		be accessible in a pre-authentication scenario
		and ONLY if it is the first time the user
		access the system
	 -->
	<security:http security="none" pattern="/netcare/initial" />
	<security:http security="none" pattern="/netcare/create" />

	<security:http>
		<security:intercept-url pattern="/**" access="ROLE_USER"/>
		<security:form-login/>
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="patient" password="0000" authorities="ROLE_USER"/>
				<security:user name="caregiver" password="0000" authorities="ROLE_ADMIN"/>
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>

</beans>
